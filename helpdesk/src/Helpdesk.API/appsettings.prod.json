{
  "ConnectionStrings": {
    "DefaultConnection": "...",
    "LogConnection": "..."
  },
  "Authentication": {
    "AllowedCorsOrigins": [ "..." ],
    "IdentityServerUrl": "https://oidc.mon.bg",
    "ApiName": "helpdesk_code_client"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Properties}]{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "LogConnection",
          "sinkOptionsSection": {
            "tableName": "Log",
            "schemaName": "logs",
            "autoCreateSqlTable": false,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Warning",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "AuditModuleId",
                "DataType": "int",
                "AllowNull": false
              }
            ]
          }
        }
      }
    ]
  },
  "BlobService": {
    "Url": "...",
    "HMACKey": "..."
  },
  "AntiVirus": {
    "Enabled": true,
    "MaxSize": 10485760,
    "Host": "...",
    "Port": "3310"
  },
  "EmailSettings": {
    "Enabled": true,
    "Service": "SendGrid",
    "SendGrid": {
      "ApiKey": "..."
   },
    "Smtp": {
      "MailServer": "mail.sendgrid.com",
      "MailPort": 587,
      "IsAuthenticated": false,
      "Password": "password"
    },
    "SenderEmail": "neispuo-no-reply@mon.bg",
    "SenderName": "НЕИСПУО - Система за поддръжка"
  }
}
