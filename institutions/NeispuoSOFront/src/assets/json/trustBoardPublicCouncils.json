          "fields": [
            {
              "label": "Статус на регистрация",
              "name": "trustBoardRegistryStatusID",
              "type": "select",
              "optionsPath": "assets/json/fake-data/baseSchoolTypes.json",
              "disabled": false,
              "order": 1
