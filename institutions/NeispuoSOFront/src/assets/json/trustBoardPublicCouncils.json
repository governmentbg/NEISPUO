              "order": 3,
              "width": 95,
              "validations": [
                {
                  "name": "maxLength",
                  "validation": 4,
                  "message": "Максимална дължина 4 символа"
                },
                {
                  "name": "max",
                  "validation": 9999,
                  "message": "Невалидна година"
                },
                {
                  "name": "pattern",
                  "validation": "^\\d+$",
                  "message": "Полето трябва да съдържа цяло неотрицателно число"
                }
              ]
