              "inputType": "text",
              "disabled": false,
              "order": 2,
              "width": 800,
              "validations": [
                {
                  "name": "maxLength",
                  "validation": 255,
                  "message": "Максимална дължина 255 символа"
                }
              ]
            },
            {
              "label": "Година на първоначална регистрация",
              "name": "trustBoardEstablishedYear",
              "type": "input",
