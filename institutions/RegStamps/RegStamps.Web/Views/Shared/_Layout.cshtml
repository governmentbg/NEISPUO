<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Печати в системата на предучилищното и училищното образование</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/RegStamps.Web.styles.css" asp-append-version="true" /> *@
    <script src="~/js/jquery-3.1.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#002966">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Списък печати", "ListStamp", "Stamp", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li><a target="_blank" href="~/downloads/Help.pdf">Помощ</a></li>
                    </ul>

                    @await Html.PartialAsync("_LoginPartial")
                }
            </div>
        </div>
    </div>
    @* <div class="line-nav"></div> *@

    <div class="container">
        @await Html.PartialAsync("_HeaderLogoAndName")
    </div>

    <div class="container body-content">
        @await Html.PartialAsync("_Notifications")

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
