@using RegStamps.Models.Constants

@if (TempData[GlobalConstants.Error] != null)
{
    <div class="alert alert-danger alert-dismissible mt-2" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <p class="text-center">@TempData[GlobalConstants.Error]</p>
    </div>
}

@if (TempData[GlobalConstants.Success] != null)
{
    <div class="alert alert-success alert-dismissible mt-2" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <p class="text-center">@TempData[GlobalConstants.Success]</p>
    </div>
}

@if (TempData[GlobalConstants.Warning] != null)
{
    <div class="alert alert-warning alert-dismissible mt-2" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <p class="text-center">@TempData[GlobalConstants.Warning]</p>
    </div>
}

