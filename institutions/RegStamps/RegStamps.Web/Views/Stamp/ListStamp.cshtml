@model RegStamps.Models.Stamp.ListStamp.Response.ListStampResponseModel

@{
    ViewBag.Title = "Списък на печати";
    int modalCount = 0;
    string noData = "Няма информация";
}


@if (Model.SchoolData != null)
{
    <div class="jumbotron" style="padding: 5px; padding-right: 30px; margin-bottom: 5px">
        <h3 class="text-right">@Model.SchoolData.SchoolName</h3>
        <h4 class="text-right">обл. @Model.SchoolData.OblastName, общ. @Model.SchoolData.MunicipalityName, град/село @Model.SchoolData.City</h4>
        @*<h4 class="text-right">Адрес: @Model.SchoolData.Address, телефон: @Model.SchoolData.Tel, факс: @Model.SchoolData.Fax, email: @Model.SchoolData.Email</h4>*@
    </div>
}

<div class="row page-header" style="margin: 0px">
    <h4>Списък на печатите в институцията</h4>
</div>

<div class="row">
    <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modal-create-request">Подаване на заявка за регистриране на печат</button>

    <div id="modal-create-request" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-dialog-custom-md">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title text-center">Създаване на нова заявка</h4>
                </div>
                <div class="modal-body">
                    <p class="first-line text-justify">Ще бъде създадена нова заявка за регистриране на печат. Моля, следвайте стъпките за попълване на данните за печата, неговият пазител и прикачете сканираното изображение на отпечатъка.</p>
                    <p class="first-line text-justify">След успешното подписване на заявката с електронен подпис, тя ще бъде изпратена за разглеждане в МОН.</p>
                    <p class="first-line text-justify">Желаете ли да продължите?</p>
                    <div class="row">
                        <div class="col-xs-6 text-center">
                            @Html.ActionLink("Да", "CreateStamp", "Stamp", null, null, null, null, new { @class = "btn btn-success btn-sm" })
                        </div>

                        <div class="col-xs-6 text-center">
                            <button class="btn btn-danger btn-sm" data-dismiss="modal">Отказ</button>
                        </div>
                    </div>
                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>

@{
    if (Model.RequestBackDataList.Any())
    {
        <div class="alert alert-danger">
            <h4>
                Следните заявки са върнати за корекция.<br />
                @foreach (var item in Model.RequestBackDataList)
                {
                    if (item.RequestTypeId == 0)
                    {
                        <span>Заявка @Html.ActionLink($"{item.RequestId}", "EditStamp", new { param = item.StampIdByte, paramReq = item.RequestIdByte }) за нов печат с УИН @item.StampId<span>.</span> Причина: @item.MonNotes<span>.</span> Дата на връщане: @item.RequestBackDate</span>

                        <br />
                    }
                    else if (item.RequestTypeId == 1)
                    {
                        <span>Заявка @Html.ActionLink($"{item.RequestId}", "EditStampChangeKeeper", new { paramStamp = item.StampIdByte, paramReq = item.RequestIdByte }) за промяна на печат с УИН @item.StampId<span>.</span> Причина: @item.MonNotes<span>.</span> Дата на връщане: @item.RequestBackDate</span>

                        <br />
                    }
                    else if (item.RequestTypeId == 2)
                    {
                        <span>Заявка @Html.ActionLink($"{item.RequestId}", "EditDestroyStamp", new { paramStamp = item.StampIdByte, paramReq = item.RequestIdByte }) за унищожаване на печат с УИН @item.StampId<span>.</span> Причина: @item.MonNotes<span>.</span> Дата на връщане: @item.RequestBackDate</span>

                        <br />
                    }
                    else if (item.RequestTypeId == 3)
                    {
                        <span>Заявка @Html.ActionLink($"{item.RequestId}", "EditLostStamp", new { paramStamp = item.StampIdByte, paramReq = item.RequestIdByte }) за обявяване на печат с УИН @item.StampId за изгубен. Причина: @item.MonNotes<span>.</span> Дата на връщане: @item.RequestBackDate</span>

                        <br />
                    }
                }
            </h4>
        </div>
    }

}


