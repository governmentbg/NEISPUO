@model RegStamps.Models.Stamp.RequestsForStamp.Response.RequestsForStampResponseModel

@{
    ViewBag.Title = "История на печата";
    int modalCount = 0;
}

@if (Model.SchoolData != null)
{
    <div class="jumbotron">
        <h3 class="text-right">@Model.SchoolData.SchoolName</h3>
        <h4 class="text-right">обл. @Model.SchoolData.OblastName, общ. @Model.SchoolData.MunicipalityName, град/село @Model.SchoolData.City</h4>
        @*<h4 class="text-right">Адрес: @Model.SchoolData.Address, телефон: @Model.SchoolData.Tel, факс: @Model.SchoolData.Fax, email: @Model.SchoolData.Email</h4>*@
    </div>
}


<div class="row">
    <h4>История на подадените заявки за печат с УИН: @ViewBag.StampId</h4>
</div>

@{
    if (!Model.RequestStampList.Any())
    {
        <table class="table">
            <tr>
                <td colspan="7" class="text-center">Няма открити данни.</td>
            </tr>
        </table>
    }
    else
    {
        <div class="row">
            <div class="filterable">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                УИН на печата
                            </th>
                            <th>
                                Номер на заявката
                            </th>
                            <th>
                                Тип на заявката
                            </th>
                            <th>
                                Статус на заявката
                            </th>
                            <th>
                                Име на пазителя
                            </th>
                            <th>
                                Последна промяна
                            </th>
                            <th class="col-lg-1-custom">Действия</th>
                        </tr>
                        <tr class="filters">
                            <th><input type="text" class="form-control" placeholder="УИН на печата"></th>
                            <th><input type="text" class="form-control" placeholder="Номер на заявката"></th>
                            <th><input type="text" class="form-control" placeholder="Тип на заявката"></th>
                            <th><input type="text" class="form-control" placeholder="Статус на заявката"></th>
                            <th><input type="text" class="form-control" placeholder="Име на пазителя"></th>
                            <th><input type="text" class="form-control" placeholder="Действия"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.RequestStampList)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StampId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequestId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequestTypeName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RequestStatusName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KeeperFullName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TimeStamp)
                                </td>
                                <td>
                                    <a href="@Url.Action("RequestDetails", "Stamp", new {paramStamp = item.StampIdByte, paramReq = item.RequestIdByte })" title="Данни за заявката">
                                        <img class="icon-small-custom" src="~/img/stamp-data-small.png" />
                                    </a>

                                    @if (item.IsActive == false 
                                            && (item.RequestStatusId == 0 
                                                    || item.RequestStatusId == 2) 
                                            && item.RequestTypeId > 0 
                                            && item.StampStatusId == 2)
                                    {
                                        if (item.RequestTypeId == 1)
                                        {
                                            @*@Html.ActionLink("Редакция", "EditStampChangeKeeper", new { paramStamp = item.StampIdByte, paramReq = item.RequestIdByte }, new { @class = "btn btn-sm btn-default" })*@
                                            <a href="@Url.Action("EditStampChangeKeeper", "Stamp", new {paramStamp = item.StampIdByte, paramReq = item.RequestIdByte })" title="Редакция">
                                                <img class="icon-small-custom" src="~/img/edit-small.png" />
                                            </a>
                                        }
                                        else if (item.RequestTypeId == 2)
                                        {
                                            @*@Html.ActionLink("Редакция", "EditDestroyStamp", new { paramStamp = item.StampIdByte, paramReq = item.RequestIdByte }, new { @class = "btn btn-sm btn-default" })*@
                                            <a href="@Url.Action("EditDestroyStamp", "Stamp", new {paramStamp = item.StampIdByte, paramReq = item.RequestIdByte })" title="Редакция">
                                                <img class="icon-small-custom" src="~/img/edit-small.png" />
                                            </a>
                                        }
                                        else if (item.RequestTypeId == 3)
                                        {
                                            @*@Html.ActionLink("Редакция", "EditLostStamp", new { paramStamp = item.StampIdByte, paramReq = item.RequestIdByte }, new { @class = "btn btn-sm btn-default" })*@
                                            <a href="@Url.Action("EditLostStamp", "Stamp", new {paramStamp = item.StampIdByte, paramReq = item.RequestIdByte })" title="Редакция">
                                                <img class="icon-small-custom" src="~/img/edit-small.png" />
                                            </a>
                                        }

                                        @*<button type="submit" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#modal-delete-request-@modalCount">Изтриване</button>*@
                                        <a data-toggle="modal" data-target="#modal-delete-request-@modalCount" title="Изтриване">
                                            <img class="icon-small-custom" src="~/img/del-small.png" />
                                        </a>

                                        <div id="modal-delete-request-@modalCount" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" data-keyboard="false" data-backdrop="static">
                                            <div class="modal-dialog modal-dialog-custom-md">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title text-center">Внимание!!!</h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p class="first-line text-justify">Ще бъде изтрита избраната заявка @item.RequestId, както и всички въведени данни в нея.</p>
                                                        <p class="first-line text-justify">Сигурни ли сте, че искате да изтриете данните. Процеса е необратим.</p>
                                                        <div class="row">
                                                            <div class="col-xs-6 text-center">

                                                                @using (Html.BeginForm("DeleteRequest", "Stamp", FormMethod.Post))
                                                                {
                                                                    <input type="hidden" name="paramReq" value="@item.RequestIdByte">
                                                                    <input type="hidden" name="paramStamp" value="@item.StampIdByte">
                                                                    <input type="submit" class="btn btn-sm btn-success" value="Да">
                                                                    @*@Html.ActionLink("Да", "DeleteStamp", "Stamp", null, null, null, null, new { @class = "btn btn-success btn-sm" })*@
                                                                }
                                                            </div>

                                                            <div class="col-xs-6 text-center">
                                                                <button class="btn btn-danger btn-sm" data-dismiss="modal">Не</button>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div><!-- /.modal-content -->
                                            </div><!-- /.modal-dialog -->
                                        </div>

                                        <!-- /.modal -->
                                    }

                                </td>
                            </tr>
                            modalCount++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}

<div class="row">
    @Html.ActionLink("Назад", "ListStamp", null, null, new { @class = "btn btn-sm btn-default" })
</div>


