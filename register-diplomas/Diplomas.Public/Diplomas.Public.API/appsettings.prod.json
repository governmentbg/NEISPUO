{
  "ConnectionStrings": {
    "DefaultConnection": "...",
    "LogConnection": "..."
  },
  "Authentication": {
    "AllowedCorsOrigins": [ "https://regdiploms.mon.bg" ]
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Properties}]{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "LogConnection",
          "sinkOptionsSection": {
            "tableName": "Log",
            "schemaName": "logs",
            "autoCreateSqlTable": false,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Warning",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "AuditModuleId",
                "DataType": "int",
                "AllowNull": false
              }
            ]
          }
        }
      }
    ]
  },
  "BlobService": {
    "Url": "...",
    "HMACKey": "..."
  }
}
