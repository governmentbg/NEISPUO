{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "rules": [
          {
            "type": "feat",
            "release": "minor"
          },
          {
            "type": "fix",
            "release": "patch"
          },
          {
            "type": "perf",
            "release": "patch"
          }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "node build-version-setter ${nextRelease.version}"
      }
    ],
    "@semantic-release/gitlab"
  ],
  "branches": [
    {
      "name": "staging",
      "prerelease": "next"
    },
    "master"
  ]
}
