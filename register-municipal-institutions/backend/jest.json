{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    }, 
    "moduleNameMapper": {
        "@domain/(.*)": "<rootDir>/domain/$1",
        "@shared/(.*)": "<rootDir>/shared/$1"
    }
}
