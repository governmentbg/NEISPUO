{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": "Launch SB.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/SB.Api/bin/Debug/net7.0/SB.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SB.Api",
            "stopAtEntry": false,
            "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
          "name": "Launch SB.ExtApi",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build-expapi",
          // If you have changed target frameworks, make sure to update the program path.
          "program": "${workspaceFolder}/SB.ExtApi/bin/Debug/net7.0/SB.ExtApi.dll",
          "args": [],
          "cwd": "${workspaceFolder}/SB.ExtApi",
          "stopAtEntry": false,
          "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
          }
        },
        {
          "name": "Launch SB.Cli",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build-cli",
          // If you have changed target frameworks, make sure to update the program path.
          "program": "${workspaceFolder}/SB.Cli/bin/Debug/net7.0/SB.Cli.dll",
          "args": ["html-template", "Book_CDO"],
          "cwd": "${workspaceFolder}/SB.Cli",
          "stopAtEntry": false,
          "env": {
          }
        },
        {
          "name": "Launch SB.JobHost",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build-jobhost",
          // If you have changed target frameworks, make sure to update the program path.
          "program": "${workspaceFolder}/SB.JobHost/bin/Debug/net7.0/SB.JobHost.dll",
          "args": [],
          "cwd": "${workspaceFolder}/SB.JobHost",
          "stopAtEntry": false,
          "env": {
            "ASPNETCORE_ENVIRONMENT": "Development"
          }
        }
    ]
}
