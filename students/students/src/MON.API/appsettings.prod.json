{
  "ConnectionStrings": {
    "DefaultConnection": "...",
    "LogConnection": "...",
    "MonAspAbsenceConnection": "..."
  },
  "Authentication": {
    "AllowedCorsOrigins": [ "..." ],
    "IdentityServerUrl": "https://oidc.mon.bg",
    "ApiName": "students_code_client"
  },
  "telerikReporting": {
    "restReportService": {
      "storage (база данни)": {
        "provider": "msSqlServer",
        "parameters": [
          {
            "name": "connectionString",
            "value": "Data Source=...;Initial Catalog=...;User Id=...; Password=...;Application Name=NEISPUO"
          }
        ]
      },
      "storage (файл)": {
        "provider": "file",
        "parameters": [
          {
            "name": "directory",
            "value": "c:\\temp"
          }
        ]
      }

      // Резултатът от справката може да се кешира за определен брой минути. По подразбиране не се кешира (стойност нула).
      // Ако заявката е със същите параметри, не се изпълнява третият Resolve(), т.е. не се зареждат данни от базата.
      //"reportSharingTimeout": 10
    }
  },
  "Regix": {
    // Избор на файлов сертификат 
    "SearchLocation": "File",
    "FileLocation": "...",
    "Password": "mon",
    // Адрес за достъп
    "Url": "https://regix-service.egov.bg/RegiX/RegiXEntryPoint.svc"
  },
  "BlobService": {
    "Url": "...",
    "HMACKey": "..."
  },
  "AntiVirus": {
    "Enabled": true,
    "MaxSize": 10485760,
    "Host": "...",
    "Port": "3310"
  },
  "EmailSettings": {
    "Enabled": true,
    "Service": "SendGrid",
    "SendGrid": {
      "ApiKey": "..."
    },
    "Smtp": {
      "MailServer": "email.kontrax.bg",
      "MailPort": 587,
      "IsAuthenticated": false,
      "Password": "password"
    },
    "SenderEmail": "neispuo-no-reply@mon.bg",
    "SenderName": "НЕИСПУО - Деца и ученици"
  },
  "Serilog": {
    "Using": [ "MON.API" ],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "EmailSink",
        "Args": {
          "toEmail": "...",
          "restrictedToMinimumLevel": "Fatal",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Properties}]{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{Properties}]{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "LogConnection",
          "sinkOptionsSection": {
            "tableName": "Log",
            "schemaName": "logs",
            "autoCreateSqlTable": false,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Warning",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "AuditModuleId",
                "DataType": "int",
                "AllowNull": false
              },
              {
                "ColumnName": "SysUserId",
                "DataType": "int",
                "AllowNull": true
              },
              {
                "ColumnName": "SysRoleId",
                "DataType": "int",
                "AllowNull": true
              }
            ]
          }
        }
      }
    ]
  },
  "UserManagementService": {
    "Url": "..."
  },
  "Caching": {
    "UseRedis": true,
    "RedisConnectionString": "...",
    "RedisPassword": ""
  },
  "SignalR": {
    "UseRedis": true,
    "RedisConnectionString": "...",
    "ChannelPrefix": "ST"
  },
  "Hangfire": {
    "UseRedis": true,
    "RedisConnectionString": "...",
    "RedisPassword": ""
  }
}
