    <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="7.0.0" />
    <PackageReference Include="Serilog.Sinks.MSSqlServer" Version="8.2.2" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta6.25358.103" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Neispuo.Tools.Services\Neispuo.Tools.Services.csproj" />
    <ProjectReference Include="..\Neispuo.Tools.Shared\Neispuo.Tools.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
