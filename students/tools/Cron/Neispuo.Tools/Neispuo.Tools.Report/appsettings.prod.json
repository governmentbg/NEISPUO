            "schemaName": "logs",
            "autoCreateSqlTable": false,
            "batchPostingLimit": 1000,
            "period": "0.00:00:30"
          },
          "restrictedToMinimumLevel": "Warning",
          "columnOptionsSection": {
            "addStandardColumns": [ "LogEvent" ],
            "removeStandardColumns": [ "Properties" ],
            "additionalColumns": [
              {
                "ColumnName": "AuditModuleId",
                "DataType": "int",
                "AllowNull": false
              },
              {
                "ColumnName": "SysUserId",
                "DataType": "int",
                "AllowNull": true
              },
              {
                "ColumnName": "SysRoleId",
                "DataType": "int",
                "AllowNull": true
              }
            ]
          }
        }
